<HBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="440.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.group7.gui.MainMenu">
   <children>
      <VBox alignment="TOP_CENTER" spacing="5.0" style="-fx-background-color: #fafafa;" HBox.hgrow="ALWAYS">
         <children>
            <Label text="Surveillance">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
            <Label text="Browse Map Library">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#prevMap" style="-fx-background-color: #ffffff; -fx-border-color: #d0d0d0;">
                     <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../img/left-arrow.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <ImageView fx:id="mapView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../img/test-map-vis.png" />
                     </image>
                  </ImageView>
                  <Button contentDisplay="RIGHT" mnemonicParsing="false" onAction="#nextMap" prefHeight="27.0" prefWidth="38.0" style="-fx-background-color: #fafafa; -fx-border-color: #d0d0d0;">
                     <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" nodeOrientation="RIGHT_TO_LEFT" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../img/left-arrow.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </HBox>
            <HBox>
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <VBox spacing="10.0">
                     <children>
                        <RadioButton fx:id="existingToggle" mnemonicParsing="false" selected="true" text=" ">
                           <graphic>
                              <Button mnemonicParsing="false" onAction="#selectExisting" text="Select Existing" />
                           </graphic>
                           <toggleGroup>
                              <ToggleGroup fx:id="mapChoice" />
                           </toggleGroup>
                        </RadioButton>
                        <Label text="Or">
                           <font>
                              <Font name="System Italic" size="14.0" />
                           </font>
                        </Label>
                        <RadioButton fx:id="uploadToggle" mnemonicParsing="false" text=" " toggleGroup="$mapChoice">
                           <graphic>
                              <Button mnemonicParsing="false" onAction="#uploadMap" text="Upload Scenario" />
                           </graphic>
                        </RadioButton>
                        <ChoiceBox fx:id="chosenAlgorithm" prefWidth="150.0" />
                        <CheckBox fx:id="logDataChoice" mnemonicParsing="false" text="Log Simulation Data" />
                     </children>
                  </VBox>
                  <Region HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <Region />
            <Label fx:id="messageLabel" text="Messsage" textFill="#d35400">
               <font>
                  <Font name="System Italic" size="13.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets top="10.0" />
         </padding>
      </VBox>
      <VBox alignment="TOP_CENTER" minWidth="160.0" spacing="10.0" style="-fx-background-color: #2c3e50;" HBox.hgrow="SOMETIMES">
         <children>
            <Label text="Info" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <VBox spacing="15.0">
               <children>
                  <VBox spacing="4.0" style="-fx-background-color: #34495e;">
                     <children>
                        <Label text="Selected Map:" textFill="WHITE">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="mapNameLabel" text="Default Map" textFill="WHITE">
                           <font>
                              <Font name="System Italic" size="13.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                     </padding>
                  </VBox>
                  <VBox spacing="4.0" style="-fx-background-color: #34495e;">
                     <children>
                        <Label text="Game Mode:" textFill="WHITE">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label fx:id="gameModeLabel" text="Exploration" textFill="WHITE">
                           <font>
                              <Font name="System Italic" size="13.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
            <Region VBox.vgrow="ALWAYS" />
            <Button fx:id="startButton" mnemonicParsing="false" onAction="#start" prefHeight="36.0" prefWidth="73.0" style="-fx-background-color: #2ecc71;" text="Start">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="25.0" left="10.0" right="10.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</HBox>
